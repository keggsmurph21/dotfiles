# vim: syntax=sh
#
# Set up tools that need to be active in the *current* shell.

export DOTFILES_DIR="$(realpath "$(dirname "${BASH_SOURCE[0]}")/../..")"

export DOTFILES_BOOTSTRAP_PYTHON="python3.8"
export DOTFILES_ANSIBLE_VERSION_SPEC="==6.5.0"
export DOTFILES_VENV_VERSION="1"
export DOTFILES_VENV="$DOTFILES_DIR/.dotfiles-data/v${DOTFILES_VENV_VERSION}/dotfiles-venv"
