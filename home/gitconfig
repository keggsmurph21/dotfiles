# vim: syntax=gitconfig

[user]
    useConfigOnly = true

[advice]
    detachedHead = false

[grep]
    lineNumber = true

[push]
    default = upstream

[diff]
    mnemonicPrefix = true

[merge]
    tool = vimdiff
    conflictstyle = diff3
    defaultToUpstream = true

[pull]
    ff = only

[color]
    ui = true
    status = auto
    branch = auto

[pretty]
    line = "%C(auto)%h %<|(80,trunc)%s %C(green)%ad %C(blue)%an%C(auto)%d"
    detail = "%C(auto)%h %s%n  %C(yellow)by %C(blue)%an %C(magenta)<%ae> [%G?] %C(green)%ad%n %C(auto)%d%n"

[credential]
    helper = cache

[log]
    date = local

[lfs]
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
    required = true
    clean = git-lfs clean -- %f

[commit]
    verbose = true

[alias]
    a       = add
    ae      = add --edit
    ap      = add --patch
    au      = add --update
    aup     = add --update --patch
    bd      = branch --delete --force
    bl      = branch --all -vv
    br      = checkout -b
    brecent = for-each-ref --sort=committerdate
    bo      = overwrite-branch
    c       = commit
    ca      = commit --amend
    co      = checkout
    commits = log --pretty=format:"%H"
    count   = rev-list --count HEAD
    cp      = cherry-pick
    cpa     = cherry-pick --abort
    cpc     = cherry-pick --continue
    d       = diff
    ds      = diff --stat
    dv      = diff -vv
    dw      = diff --color-words
    dc      = diff --cached
    dcs     = diff --cached --stat
    dcv     = diff --cached -vv
    dcw     = diff --cached --color-words
    dir     = rev-parse --show-toplevel
    f       = fetch
    fa      = fetch --all --prune
    graph   = log --graph
    hashes  = log --format="%h"
    hashes40= log --format="%H"
    null    = hash-object -t tree /dev/null
    l       = log
    lol     = log --pretty=line
    ls      = log --stat
    lsm     = ls-mtime
    ma      = merge --abort
    mr      = resolve-conflicts
    ra      = rebase --abort
    rc      = rebase --continue
    ri      = rebase --interactive
    s       = status --short --branch
    st      = status
    su      = show-upstream
    uca     = undo-commit-amend
    uncommit= reset --soft HEAD~1 --
    unstage = reset HEAD --
    url     = ls-remote --get-url

[core]
    excludesfile = ~/.gitignore

[include]
    # local customization
    path    = ~/.gitconfig.local
