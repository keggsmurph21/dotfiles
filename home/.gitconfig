# vim: syntax=gitconfig

[init]
    defaultBranch = main

[user]
    useConfigOnly = true

[advice]
    detachedHead = false

[grep]
    lineNumber = true

[push]
    default = upstream

[diff]
    mnemonicPrefix = true

[merge]
    tool = vimdiff
    conflictstyle = diff3
    defaultToUpstream = true

[pull]
    ff = only

[color]
    ui = true
    status = auto
    branch = auto

[pretty]
    line = "%C(auto)%h %<|(80,trunc)%s %C(green)%ad %C(blue)%an%C(auto)%d"
    linenarrow = "%C(auto)%h %<|(60,trunc)%s %C(auto)%d"
    detail = "%C(auto)%h %s%n  %C(yellow)by %C(blue)%an %C(magenta)<%ae> [%G?] %C(green)%ad%n %C(auto)%d%n"

[credential]
    helper = cache

[log]
    date = local

[lfs]
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
    required = true
    clean = git-lfs clean -- %f

[commit]
    verbose = true

[alias]
    a       = add
    abbr    = log -n1 --format=%h
    ae      = add --edit
    an      = add --intent-to-add
    ap      = add --patch
    au      = add --update
    aup     = add --update --patch
    bd      = branch --delete --force
    be      = branch-exists
    bl      = branch --all -vv
    bo      = overwrite-branch
    br      = checkout -b
    brecent = for-each-ref --sort=committerdate
    c       = commit
    cel     = config --edit --local
    ca      = commit --amend
    cane    = commit --amend --no-edit
    co      = checkout
    commits = log --pretty=format:"%H"
    cou     = checkout-upstream
    coud    = checkout-upstream develop
    count   = rev-list --count HEAD
    cp      = cherry-pick
    cpa     = cherry-pick --abort
    cpc     = cherry-pick --continue
    cpq     = cherry-pick --quit
    cps     = cherry-pick --skip
    d       = diff
    dc      = diff --cached
    dcs     = diff --cached --stat
    dcv     = diff --cached -vv
    dcw     = diff --cached --color-words
    dir     = rev-parse --show-toplevel
    dn      = diff --name-only
    ds      = diff --stat
    dv      = diff -vv
    dw      = diff --color-words
    f       = fetch
    fa      = fetch --all --prune
    fd      = filedelta
    fm      = find-merge
    fo      = fetch origin
    fpr     = find-pr
    gcontent= grep-content-only
    graph   = log --graph
    hashes  = log --format="%h"
    hashes40= log --format="%H"
    kcpw    = keep-cherry-picking-while
    krw     = keep-rebasing-while
    l       = log
    lol     = log --pretty=line
    loln    = log --pretty=linenarrow
    lp      = log -p
    ls      = ls-files
    lsm     = ls-mtime
    ma      = merge --abort
    mr      = resolve-conflicts
    null    = hash-object -t tree /dev/null
    ra      = rebase --abort
    rc      = rebase --continue
    re      = rebase --edit-todo
    rho     = reset-hard-remote origin
    rhod    = reset-hard-remote origin develop
    rhom    = reset-hard-remote origin master
    ri      = rebase --interactive
    ro      = rebase --onto
    rood    = rebase --onto origin/develop
    room    = rebase --onto origin/master
    s       = status --short --branch
    spull   = stash-pull
    stat    = log -n1 --format=%s --stat
    st      = status
    su      = show-upstream
    uca     = undo-commit-amend
    uncommit= reset --soft HEAD~1 --
    unstage = reset HEAD --
    unm     = unmerged
    unma    = unmerged-add
    unme    = unmerged-edit

[core]
    excludesfile = ~/.gitignore

[include]
    # local customization
    path    = ~/.gitconfig.local
